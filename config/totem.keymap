            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
         &kp Q  &kp W  &kp E             &kp R        &kp T        &kp Y      &kp U        &kp I              &kp O       &kp P
         &kp A  &kp S  &mt LEFT_SHIFT D  &mt LCTRL F  &kp G        &kp H      &mt RCTRL J  &mt RIGHT_SHIFT K  &mt RALT L  &mt RGUI SEMICOLON
&kp TAB  &kp Z  &kp X  &kp C             &kp V        &kp B        &kp N      &kp M        &kp COMMA          &kp DOT     &kp SLASH           &kp SQT
                       &kp DEL           &mo 1        &kp SPACE    &kp ENTER  &lt 2 ESC    &kp BSPC
